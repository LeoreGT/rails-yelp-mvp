<h1 class="text-center">Welcome to Our Restaurants!</h1>
<p class="text-center"> <%= link_to "Add a Restaurant", new_restaurant_path%></p>
<% @restaurants.each do |restaurant|%>
<div class="container text-center">
  <div class="row text-center">
    <div class="col-xs-12">
      <h2> <%= link_to restaurant.name, restaurant_path(restaurant)%> </h2> <%= link_to "Review", new_restaurant_review_path(restaurant)%>
      | <%= link_to "Delete Restaurant", restaurant_path(restaurant), method: :delete %>
    </div>
  </div>
</div>
<% end %>
