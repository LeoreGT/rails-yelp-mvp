<div class="container">
  <div class="row text-center">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Welcome to <%=@restaurant.name%></h1>
      <h2>Cuisine: <%=(@restaurant.category).capitalize%></h2>
      <h3>Address: <%=@restaurant.address%></h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h2 class ="text-center">Add Your Review!</h2>
    <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>
      <div class="text-center"><%= f.submit "Add Review", class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% @reviews.each do |review|%>
      <p>
        <%= review.rating %> : <%= review.content %>
      </p>
      <% end %>
    </div>
  </div>
</div>
<p class="text-center"><%= link_to "Back to Restaurants", restaurants_path%></p>
<p class="text-center"><%= link_to "Delete Restaurant", restaurant_path(@restaurant), method: :delete %></p>

